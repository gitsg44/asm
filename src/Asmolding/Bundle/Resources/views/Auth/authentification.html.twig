{# empty Twig template #}
{% extends '::base.html.twig' %}
{% trans_default_domain 'AsmoldingBundle' %}
{% block title %}{{parent()}} - Connexion{% endblock %}
{% block body %}
<div class="container">

    {% if error %}
        <div class="error">{{ error.message| replace({"Bad credentials" : "Identifiant et/ou mot de passe incorrect(s)."})  }}</div>
    {% endif %}

<form action="{{ path('asmolding_login_check') }}" method="post" class="form-signin">
    
    <h2 class="form-signin-heading">Connexion</h2>
    <label for="username">Login :</label>
    <input type="text" id="username" name="_username" value="{{ dernier_identifiant }}" class="form-control" autofocus="true"/>

    <label for="password">Mot de passe :</label>
    <input type="password" id="password" name="_password" class="form-control" />
    
    <label for="remember_me">Se souvenir de moi</label>
    <input type="checkbox" id="remember_me" name="_remember_me" class="checkbox"/>
    <button type="submit" class="btn btn-lg btn-success btn-block">Connexion</button>
</form>

   
</div>
{% endblock %}
