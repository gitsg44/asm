{# empty Twig template #}
{% extends '::base.html.twig' %}
{% block title %}
        {{parent()}} - Rechercher un Client
{% endblock %}
{% block body %}
    <div class="container">
       
        
        {{ form_start(form, {'attr': {'class': 'form-classic', novalidate:'novalidate'}}) }}
        {{ form_errors(form) }}
       
            <h2 class="form-signin-heading">Rechercher un client</h2>
        
        {{ form_label(form.name, "Nom du client *") }}
        {{ form_errors(form.name) }}
        {{ form_widget(form.name, {'attr':{'class':'form-control'},'placeholder':'Company','required':true,'autofocus':true}) }}
        
        
        {{ form_widget(form.rechercher, {'attr': {'class': 'btn btn-lg btn-success btn-block'}}) }}
        
        {{ form_rest(form) }}
    {{ form_end(form) }}
    </div>
     
{% endblock %}
